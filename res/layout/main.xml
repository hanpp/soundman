<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:weightSum="1">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Start"
                android:id="@+id/startButton" android:clickable="true" android:enabled="true"
                android:onClick="startJackService" android:layout_weight="0.35"/>
        <Button android:layout_width="wrap_content" android:layout_height="48dp" android:text="Stop"
                android:id="@+id/stopButton" android:clickable="true" android:enabled="true"
                android:onClick="stopJackService"
                android:layout_weight="0.38"/>
        <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/progressBar" android:indeterminate="true"
                android:indeterminateOnly="true"/>
    </LinearLayout>
    <Switch android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="Start the soundman service on device boot"
            android:id="@+id/switch_startonBoot" android:clickable="true" android:checked="true" android:enabled="true"
            android:onClick="changeStartOnBootSetting" android:textOn="Enabled" android:textOff="Disabled"
            android:layout_weight="0.18" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unmute"
            android:id="@+id/button" android:layout_weight="0.04" android:enabled="true" android:clickable="true"
            android:onClick="unMute"/>
</LinearLayout>

